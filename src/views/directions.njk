<script>
function collapseAll () {
	Array
		.from(document.getElementById('directions-list').children)
		.forEach(item => item.classList.remove('expanded'))
}

function expandAll () {
	Array
		.from(document.getElementById('directions-list').children)
		.forEach(item => item.classList.add('expanded'))
}
</script>

